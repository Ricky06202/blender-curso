---
import Layout from '../../layouts/Layout.astro';
---

<Layout>
  <script>
    // Profile page handler
    document.addEventListener('DOMContentLoaded', async () => {
      const token = localStorage.getItem('token');
      
      // Si no hay token, redirigir al login
      if (!token) {
        window.location.href = '/auth/login';
        return;
      }
      
      // Obtener datos del usuario
      try {
        const response = await fetch('https://blenderapi.rsanjur.com/api/auth/me', {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          }
        });
        
        if (response.ok) {
          const user = await response.json();
          // Actualizar UI con datos del usuario
          updateProfileUI(user);
        } else {
          // Token inválido, redirigir al login
          localStorage.removeItem('token');
          window.location.href = '/auth/login';
        }
      } catch (error) {
        console.error('Error al obtener datos del usuario:', error);
        alert('Error de conexión al cargar el perfil');
      }
      
      // Logout handler
      const logoutBtn = document.querySelector('[data-logout]');
      if (logoutBtn) {
        logoutBtn.addEventListener('click', async () => {
          try {
            await fetch('https://blenderapi.rsanjur.com/api/auth/logout', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'Authorization': `Bearer ${token}`
              }
            });
          } catch (error) {
            console.error('Error en logout:', error);
          }
          
          localStorage.removeItem('token');
          window.location.href = '/auth/login';
        });
      }
    });
    
    function updateProfileUI(user: any) {
      // Actualizar nombre y email
      const userName = document.querySelector('[data-user-name]');
      const userEmail = document.querySelector('[data-user-email]');
      const userInitials = document.querySelector('[data-user-initials]');
      
      if (userName) userName.textContent = `${user.firstName} ${user.lastName}`;
      if (userEmail) userEmail.textContent = user.email;
      if (userInitials) {
        const initials = `${user.firstName?.[0] || ''}${user.lastName?.[0] || ''}`.toUpperCase();
        userInitials.textContent = initials || 'U';
      }
    }
  </script>
  
  <section class="px-5 pt-24 pb-12 bg-linear-to-b from-white to-slate-50 min-h-[80vh]">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-semibold tracking-tight mb-2">Mi perfil</h1>
        <p class="text-slate-600">Gestiona tu cuenta y sigue tu progreso en el curso</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Profile Info Card -->
        <div class="lg:col-span-1">
          <div class="bg-white border border-slate-200 rounded-xl p-6 shadow-sm">
            <div class="text-center">
              <div class="w-20 h-20 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <span class="text-2xl font-semibold text-indigo-600" data-user-initials>JP</span>
              </div>
              <h2 class="text-xl font-semibold mb-1" data-user-name>Juan Pérez</h2>
              <p class="text-slate-600 text-sm mb-4" data-user-email>juan.perez@email.com</p>
              <div class="flex items-center justify-center text-sm text-slate-500">
                <span class="inline-block w-2 h-2 bg-green-500 rounded-full mr-2"></span>
                Miembro desde Nov 2024
              </div>
            </div>
          </div>
        </div>

        <!-- Main Content Area -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Progress Overview -->
          <div class="bg-white border border-slate-200 rounded-xl p-6 shadow-sm">
            <h3 class="text-lg font-semibold mb-4">Progreso del curso</h3>
            <div class="space-y-4">
              <div>
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm font-medium text-slate-700">Progreso general</span>
                  <span class="text-sm text-slate-600">12 de 24 capítulos</span>
                </div>
                <div class="w-full bg-slate-200 rounded-full h-2">
                  <div class="bg-indigo-600 h-2 rounded-full" style="width: 50%"></div>
                </div>
              </div>
              
              <div class="grid grid-cols-3 gap-4 pt-2">
                <div class="text-center">
                  <div class="text-2xl font-semibold text-indigo-600">12</div>
                  <div class="text-xs text-slate-600">Capítulos completados</div>
                </div>
                <div class="text-center">
                  <div class="text-2xl font-semibold text-slate-900">24</div>
                  <div class="text-xs text-slate-600">Capítulos totales</div>
                </div>
                <div class="text-center">
                  <div class="text-2xl font-semibold text-green-600">50%</div>
                  <div class="text-xs text-slate-600">Progreso</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Recent Activity -->
          <div class="bg-white border border-slate-200 rounded-xl p-6 shadow-sm">
            <h3 class="text-lg font-semibold mb-4">Actividad reciente</h3>
            <div class="space-y-3">
              <div class="flex items-start gap-3">
                <div class="w-2 h-2 bg-green-500 rounded-full mt-1.5"></div>
                <div class="flex-1">
                  <p class="text-sm font-medium">Completaste: "Iluminación básica"</p>
                  <p class="text-xs text-slate-600">Hace 2 días</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full mt-1.5"></div>
                <div class="flex-1">
                  <p class="text-sm font-medium">Iniciaste: "Materiales y texturas"</p>
                  <p class="text-xs text-slate-600">Hace 5 días</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <div class="w-2 h-2 bg-green-500 rounded-full mt-1.5"></div>
                <div class="flex-1">
                  <p class="text-sm font-medium">Completaste: "Modelado orgánico básico"</p>
                  <p class="text-xs text-slate-600">Hace 1 semana</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Account Settings -->
          <div class="bg-white border border-slate-200 rounded-xl p-6 shadow-sm">
            <h3 class="text-lg font-semibold mb-4">Configuración de cuenta</h3>
            <div class="space-y-4">
              <button class="w-full text-left px-4 py-3 border border-slate-200 rounded-lg hover:bg-slate-50 transition">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="font-medium text-sm">Editar perfil</p>
                    <p class="text-xs text-slate-600">Actualiza tu información personal</p>
                  </div>
                  <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </button>

              <button class="w-full text-left px-4 py-3 border border-slate-200 rounded-lg hover:bg-slate-50 transition">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="font-medium text-sm">Cambiar contraseña</p>
                    <p class="text-xs text-slate-600">Actualiza tu contraseña de acceso</p>
                  </div>
                  <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </button>

              <button class="w-full text-left px-4 py-3 border border-slate-200 rounded-lg hover:bg-slate-50 transition">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="font-medium text-sm">Preferencias de notificación</p>
                    <p class="text-xs text-slate-600">Configura alertas y recordatorios</p>
                  </div>
                  <svg class="w-4 h-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </button>

              <button class="w-full text-left px-4 py-3 border border-red-200 rounded-lg hover:bg-red-50 transition" data-logout>
                <div class="flex items-center justify-between">
                  <div>
                    <p class="font-medium text-sm text-red-600">Cerrar sesión</p>
                    <p class="text-xs text-slate-600">Salir de tu cuenta actual</p>
                  </div>
                  <svg class="w-4 h-4 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                  </svg>
                </div>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>