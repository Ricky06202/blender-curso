---
import Layout from '../../layouts/Layout.astro';
---

<Layout>
  <script>
    // Register form handler
    document.addEventListener('DOMContentLoaded', () => {
      const registerForm = document.querySelector('form');
      if (!registerForm) return;
      
      registerForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(registerForm);
        const password = formData.get('password');
        const confirmPassword = formData.get('confirmPassword');
        
        // Validar contraseñas
        if (password !== confirmPassword) {
          alert('Las contraseñas no coinciden');
          return;
        }
        
        const data = {
          name: `${formData.get('firstName')} ${formData.get('lastName')}`,
          email: formData.get('email'),
          password: password
        };
        
        try {
          const response = await fetch('https://blenderapi.rsanjur.com/api/auth/register', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
          });
          
          const result = await response.json();
          
          if (response.ok) {
            alert('¡Cuenta creada exitosamente! Redirigiendo al inicio de sesión...');
            window.location.href = '/auth/login';
          } else {
            alert(result.message || 'Error al crear la cuenta');
          }
        } catch (error) {
          alert('Error de conexión: ' + (error as Error).message);
        }
      });

      // Google Sign-In handler
      const googleBtn = document.getElementById('google-signin-btn');
      if (googleBtn) {
        googleBtn.addEventListener('click', () => {
          // Redirect to Google OAuth endpoint
          window.location.href = 'https://blenderapi.rsanjur.com/api/auth/google';
        });
      }
    });
  </script>
  
  <section class="grid place-items-center px-5 pt-24 pb-12 bg-linear-to-b from-white to-slate-50 min-h-[80vh]">
    <div class="w-full max-w-md">
      <div class="bg-white border border-slate-200 rounded-xl p-6 shadow-sm">
        <div class="text-center mb-6">
          <h1 class="text-2xl font-semibold tracking-tight mb-2">Crear cuenta</h1>
          <p class="text-slate-600 text-sm">Regístrate para acceder a todos los capítulos del curso</p>
        </div>

        <form class="space-y-4">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label for="firstName" class="block text-sm font-medium text-slate-700 mb-1.5">
                Nombre
              </label>
              <input 
                type="text" 
                id="firstName" 
                name="firstName" 
                required
                class="w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="Juan"
              />
            </div>
            <div>
              <label for="lastName" class="block text-sm font-medium text-slate-700 mb-1.5">
                Apellido
              </label>
              <input 
                type="text" 
                id="lastName" 
                name="lastName" 
                required
                class="w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="Pérez"
              />
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-slate-700 mb-1.5">
              Correo electrónico
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="tu@email.com"
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-slate-700 mb-1.5">
              Contraseña
            </label>
            <input 
              type="password" 
              id="password" 
              name="password" 
              required
              minlength="8"
              class="w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Mínimo 8 caracteres"
            />
          </div>

          <div>
            <label for="confirmPassword" class="block text-sm font-medium text-slate-700 mb-1.5">
              Confirmar contraseña
            </label>
            <input 
              type="password" 
              id="confirmPassword" 
              name="confirmPassword" 
              required
              minlength="8"
              class="w-full px-3 py-2 border border-slate-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Repite tu contraseña"
            />
          </div>

          <button 
            type="submit" 
            class="w-full px-4 py-2 rounded-md text-white bg-indigo-600 border border-indigo-600 shadow-[0_6px_20px_-8px_rgb(79_70_229)] hover:bg-indigo-700 transition"
          >
            Crear cuenta
          </button>
        </form>

        <div class="mt-6 text-center">
          <div class="mt-6">
            <div class="relative">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-slate-300"></div>
              </div>
              <div class="relative flex justify-center text-sm">
                <span class="px-2 bg-white text-slate-500">O continuar con</span>
              </div>
            </div>
            
            <button 
              type="button" 
              id="google-signin-btn"
              class="mt-4 w-full flex items-center justify-center gap-3 px-4 py-2.5 border border-slate-300 rounded-md bg-white text-slate-700 hover:bg-slate-50 transition"
            >
              <svg class="w-5 h-5" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              Continuar con Google
            </button>
          </div>
          
          <p class="text-sm text-slate-600 mt-6" >
            ¿Ya tienes una cuenta? 
            <a href="/auth/login" class="text-indigo-600 hover:text-indigo-700 font-medium">
              Inicia sesión
            </a>
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>